{
  "manifest_version": 2,
  "name": "NeuroGlancer Split Tool Extension",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
//        "http://emdata1.int.janelia.org/neuroglancer/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite",
    "tabs"
//    "http://emdata1.int.janelia.org/neuroglancer/*"
  ]
}
